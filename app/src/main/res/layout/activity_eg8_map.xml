<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lwj.ademo.Eg8Map">


    <com.amap.api.maps2d.MapView
        android:layout_above="@+id/eg8view1"
        android:id="@+id/Map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </com.amap.api.maps2d.MapView>
    <RelativeLayout
        android:id="@+id/eg8lb"
        android:layout_marginTop="55dp"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageButton
            android:onClick="moreData"
            android:background="@drawable/lb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginRight="5dp"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_weight="1"
            android:background="#00000000"
            android:id="@+id/eg8jd"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text=" 50.4 km  10:59:59"/>
        <!--<TextView-->
            <!--android:gravity="center"-->
            <!--android:layout_weight="1"-->
            <!--android:background="#00000000"-->
            <!--android:id="@+id/eg8wd"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:text="纬度：30.895624N"/>-->


    </RelativeLayout>
    <View
        android:layout_above="@+id/eg8LLayout"
        android:id="@+id/eg8view1"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1px"
        />
  <LinearLayout
      android:id="@+id/eg8LLayout"
      android:layout_alignParentBottom="true"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      >
      <TextView
          android:gravity="center"
          android:textSize="18dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/grey"
          android:layout_weight="1"
          android:text="发现"/>
      <TextView
          android:gravity="center"
          android:textSize="18dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/orange"
          android:layout_weight="1"
          android:text="徒步"/>
      <TextView
          android:gravity="center"
          android:textSize="18dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/grey"
          android:layout_weight="1"
          android:text="北斗"/>
      <TextView
          android:gravity="center"
          android:textSize="18dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/grey"
          android:layout_weight="1"
          android:text="我的"/>



  </LinearLayout>
    <ImageButton
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/eg8view1"
        android:layout_centerInParent="true"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/walk"/>
    <LinearLayout
        android:id="@+id/eg8LLayout2"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_above="@id/eg8view1"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="#cc000000"
        >
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="更多数据"/>

    </LinearLayout>


</RelativeLayout>
