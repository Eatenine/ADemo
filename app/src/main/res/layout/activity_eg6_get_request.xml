<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lwj.ademo.Eg6GetRequest">
    <EditText
        android:id="@+id/eg6EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入请求地址"
        android:padding="10dp"/>
    <Button
        android:onClick="eg6Btn"
        android:id="@+id/eg6Button"
        android:layout_below="@id/eg6EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击发送请求"
        android:layout_marginTop="10dp"/>
    <View
        android:layout_marginTop="10dp"
        android:layout_below="@+id/eg6Button"
        android:id="@+id/eg6View1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"/>
    <ScrollView
        android:layout_below="@+id/eg6View1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_below="@+id/eg6View1"
            android:id="@+id/eg6TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ScrollView>


</RelativeLayout>
